<div class="box">
  <div class="columns is-mobile is-multiline is-flex">
    <% @customers.each do |customer| %>
      <div class="column is-3 has-fixed-height">
      <div class="box is-flex align-items-stretch"">
          <h3 class="has-text-weight-bold mb-5"><%= customer.full_name %></h3>
          <figure class="image is-2by3">
            <%= image_tag customer.image %>
          </figure>
          <p class="my-4">Phone: <%= number_to_phone(customer.phone_number, area_code: true, delimiter: '-') %></p>
          <% if customer.email_address.present? %>
            <p>Email: <%= customer.email_address %></p>
          <% end %>
          <% if customer.notes.present? %>
            <p>Notes: <%= customer.notes %></p>
          <% end %>
        </div>
</div>
     <% end %>
  </div>
</div>
